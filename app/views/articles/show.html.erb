<h1><%= @article.title %></h1>

<%= link_to edit_article_path(@article) do %>
  <i class="far fa-edit"></i>
<% end %>

<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="far fa-trash-alt"></i>
<% end %>

<p><%= @article.content %></p>

<%= link_to 'Back to Articles', articles_path %>
